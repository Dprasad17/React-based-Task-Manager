{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "jsx": "react-jsx", // or "react-native" for older RN versions
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}
